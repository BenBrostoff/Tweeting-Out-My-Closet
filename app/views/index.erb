<div class="container">
  <div class="tweets">
  <h1>Most Embarrassing Tweets</h1>

    <% @tweets.each do |tweet| %>
      <div class="bubble">
      <%= date_format(tweet.datetime) + " " %>
      <%= datetime_am_pm(tweet.datetime) + " " %>
      <br>
      <%= tweet.text %>
      <br>
      <%= User.find(tweet.user_id).name %>
      <br>
      <% email = User.find(tweet.user_id).email %>
      <image class="profile" src="http://www.gravatar.com/avatar/<%=gravatar_hash(email)%>">
      <br>
      <%= "Total User Votes: " + "#{tweet.user_votes}" %>
      <br>
      <% if tweet.user_votes != 0 %>
        <%= "Embarrassment Rating: " + "#{tweet.average_votes}"%>
      <% end %>
      <br>
      <br>
    </div>
    <% end %>
  </div>

  <div class="high_scores">
  <h1> Knows DBC Best </h1>
  <% counter = 1 %>
  <% @high_scores.each do |user| %>
    <%= "#{counter}. " + user.name + " " + "#{user.score} points" %>
    <% email = user.email %>
    <image class="profile" src="http://www.gravatar.com/avatar/<%=gravatar_hash(email)%>">
    <br>
    <% counter += 1 %>
  <% end %>
  </div>
 </div>

