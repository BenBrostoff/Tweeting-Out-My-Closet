
<div class="container">
<p class="hidden_answer"><%=@author.id%></p>
<center>
<div class="bubble">
<%= @tweet.datetime %>
<br>
<%= @tweet.text %>
</div>

<h3 class="correct_answer"> </h3>

<h3> How embarrassing is this tweet? </h3>
  <form action="/play/rate/<%=@tweet.id%>" method="POST">
  <input type="range"  min="0" max="100" value="50" name="votes">
  <br>
  <input type="submit" value="Rate this Tweet!">
</form>

<h3> Who do you think tweeted this gem? </h3>
<div id="shuffle">
<table style="width: 75%">
  <tr>
    <form action="/play/guess/<%=@author.id%>" method="POST">
    <td><input type="radio" name="choice" value="<%= @author.id %>" ><%=@author.name %></td>
    <td><image class="profile" src="http://www.gravatar.com/avatar/<%=gravatar_hash(@author.email)%>"></td>
  </tr>

<% array = (1..User.last.id).to_a %>
<% array = array.find_all{ |id| id != User.find(@tweet.user_id).id } %>

<% 4.times do %>
<tr>
<td><input class="radio" name="choice" type="radio" value="<%= answer = User.find(array.sample).id %>" ><%=User.find(answer).name %></td>
<td><image class="profile" src="http://www.gravatar.com/avatar/<%=gravatar_hash(User.find(answer).email)%>"></td>
    <% array = array.find_all{ |id| id != answer } %>
  </tr>
  <% end %>
  <input type="submit" value="Guess who!">


</form>
</table>
</div>
</center>
</div>
