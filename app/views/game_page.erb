
<div class="container">

<center>
<div class="bubble">
<%= @tweet.datetime %>
<br>
<%= @tweet.text %>
</div>

<h3> How embarrassing is this tweet? </h3>
<input type="range"  min="0" max="100" value="50"/>
</h3>

<h3> Who do you think tweeted this gem? </h3>
<div id="shuffle">
<form action="" >
<table style="width: 75%">
<ul>
<tr>
<td><li><input type="radio" value="<%= answer = User.find(@tweet.user_id) %>"><%=answer.name %></li></td>
<td><image class="profile" src="http://www.gravatar.com/avatar/<%=gravatar_hash(answer.email)%>"></td>
</tr>

<% array = (1..User.last.id).to_a %>
<% array = array.find_all{ |id| id != User.find(@tweet.user_id).id } %>

<% 4.times do %>
 <tr>
 <td><li><input class="radio" type="radio" value="<%= answer = User.find(array.sample) %>"><%=answer.name %></li></td>
  <td><image class="profile" src="http://www.gravatar.com/avatar/<%=gravatar_hash(answer.email)%>"></td>
 </tr>
<% array = array.find_all{ |id| id != answer.id } %>
<% end %>
</ul>
</form>
</div>
</center>
</div>
