    See: http://necolas.github.com/normalize.css/
  -->
  <link rel="stylesheet" href="/css/normalize.css">
  <!--
    application.css is where you put your styles
  -->
  <link rel="stylesheet" href="/css/application.css">
  <link href='http://fonts.googleapis.com/css?family=Cabin+Condensed' rel='stylesheet' type='text/css'>

  <script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
  <script src="/js/application.js"></script>

  <title></title>
</head>
<body>
  <nav>
   <ul class="left_nav">
   <li><a class="title" href="/"> Tweeting Out My Closet </a></li>
   <% if logged_in? %>
   <li><a class="title" href="/play"> Play the Game! </a></li>
   <% end %>
  </ul>


<ul class="right_nav">
  <% if logged_in? %>
   <li><a class="user_info" href="/signout">Sign Out</a><li>
    <li><a class="user_info" href="/users/change_password/<%=current_user.id%>">Change Password</a><li>
   <li><a class="user_info" href="/users/<%=current_user.id%>"><%=current_user.name%>'s Closet</a></li>
  <% else %>
    <li><a href="/login">login</a></li>
  <% end %>
</ul>
  </nav>
  <%= yield %>
